<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.layout8.MainActivity" >

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/orensen" />

    <View
        android:id="@+id/view1"
        android:layout_width="50dp"
        android:layout_height="1dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/imageView1"
        android:layout_marginTop="5dp"
        android:background="#C0C0C0" />

    <View
        android:id="@+id/view2"
        android:layout_width="1dp"
        android:layout_height="47dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/view1"
        android:background="#C0C0C0" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignLeft="@+id/imageView1"
        android:layout_below="@+id/view2"
        android:layout_marginTop="5dp"
        android:src="@drawable/orensenn" />

    <View
        android:id="@+id/view3"
        android:layout_width="1dp"
        android:layout_height="47dp"
        android:layout_alignLeft="@+id/view2"
        android:layout_below="@+id/view2"
        android:background="#C0C0C0" />

    <View
        android:id="@+id/view4"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/view3"
        android:background="#C0C0C0" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/imageView1"
        android:layout_marginLeft="72dp"
        android:layout_toRightOf="@+id/view2"
        android:text="TIME"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView1"
        android:layout_marginLeft="49dp"
        android:layout_toRightOf="@+id/view2"
        android:text="00:04"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="30sp"
        android:textStyle="bold" />

    <View
        android:id="@+id/view5"
        android:layout_width="1dp"
        android:layout_height="100dp"
        android:layout_alignBottom="@+id/view3"
        android:layout_marginRight="24dp"
        android:layout_toLeftOf="@+id/textView4"
        android:background="#C0C0C0" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView4"
        android:layout_alignLeft="@+id/textView4"
        android:layout_marginLeft="14dp"
        android:text="0:00"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/textView1"
        android:layout_marginRight="16dp"
        android:text="AVG MIN/KM"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textSize="10sp" />

    <View
        android:id="@+id/view6"
        android:layout_width="102dp"
        android:layout_height="1dp"
        android:layout_alignLeft="@+id/view5"
        android:layout_alignTop="@+id/view3"
        android:background="#C0C0C0" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView3"
        android:layout_alignTop="@+id/imageView2"
        android:text="0"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView4"
        android:layout_below="@+id/textView5"
        android:text="CALORIES"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textSize="10sp" />

    <View
        android:id="@+id/view8"
        android:layout_width="8dp"
        android:layout_height="9dp"
        android:layout_alignBottom="@+id/textView6"
        android:layout_marginRight="3dp"
        android:layout_toRightOf="@+id/view7"
        android:background="#C0C0C0" />

    <View
        android:id="@+id/view9"
        android:layout_width="8dp"
        android:layout_height="15dp"
        android:layout_alignBottom="@+id/textView6"
        android:layout_toRightOf="@+id/view8"
        android:background="#C0C0C0" />

    <View
        android:id="@+id/view7"
        android:layout_width="8dp"
        android:layout_height="4dp"
        android:layout_alignBottom="@+id/view8"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="3dp"
        android:layout_toRightOf="@+id/view3"
        android:background="#C0C0C0" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageView2"
        android:layout_alignLeft="@+id/textView1"
        android:text="Searching" />

    <View
        android:id="@+id/view10"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/view4"
        android:layout_marginTop="200dp"
        android:background="#60C0C0C0" />

    <View
        android:id="@+id/view11"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/view10"
        android:layout_marginTop="140dp"
        android:background="#60C0C0C0" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/view10"
        android:layout_marginTop="45dp"
        android:background="#60C0C0C0"
        android:scaleType="fitXY"
        android:src="@drawable/abc_ic_ab_back_mtrl_am_alpha" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/view10"
        android:layout_marginTop="45dp"
        android:background="#60C0C0C0"
        android:scaleType="fitXY"
        android:src="@drawable/abc_ic_go_search_api_mtrl_alpha" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView13"
        android:layout_toLeftOf="@+id/textView6"
        android:text="0:00"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#1596D2"
        android:textSize="35sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView8"
        android:layout_alignBottom="@+id/textView8"
        android:layout_alignRight="@+id/textView5"
        android:text="CURRENT SPACE"
        android:textColor="#1596D2"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/imageView3"
        android:layout_toLeftOf="@+id/textView7"
        android:text="0:00"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="35sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView9"
        android:layout_toLeftOf="@+id/textView7"
        android:text="DISTANCE"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView9"
        android:layout_toLeftOf="@+id/view8"
        android:text="KM"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:weightSum="2.0" >

        <Button
            android:id="@+id/button1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1.0"
            android:background="#F97171"
            android:text="Stop"
            android:textColor="#fff" />

        <Button
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1.0"
            android:background="#969696"
            android:text="Pause"
            android:textColor="#fff" />
    </LinearLayout>

    <View
        android:id="@+id/view20"
        android:layout_width="20dp"
        android:layout_height="10dp"
        android:layout_alignRight="@+id/textView6"
        android:layout_alignTop="@+id/view19"
        android:background="#1596D2" />

    <View
        android:id="@+id/view19"
        android:layout_width="20dp"
        android:layout_height="10dp"
        android:layout_marginRight="10dp"
        android:layout_alignTop="@+id/view18"
        android:layout_toRightOf="@+id/textView13"
        android:background="#1596D2" />

    <View
        android:id="@+id/view17"
        android:layout_width="20dp"
        android:layout_height="10dp"
        android:layout_alignTop="@+id/view16"
        android:layout_marginRight="10dp"
        android:layout_toRightOf="@+id/textView2"
        android:background="#1596D2" />

    <View
        android:id="@+id/view16"
        android:layout_width="20dp"
        android:layout_height="10dp"
        android:layout_alignTop="@+id/view15"
        android:layout_centerHorizontal="true"
        android:background="#1596D2" />

    <View
        android:id="@+id/view15"
        android:layout_width="20dp"
        android:layout_height="10dp"
        android:layout_alignTop="@+id/view14"
        android:layout_marginRight="10dp"
        android:layout_toRightOf="@+id/textView8"
        android:background="#1596D2" />

    <View
        android:id="@+id/view13"
        android:layout_width="20dp"
        android:layout_height="10dp"
        android:layout_marginRight="10dp"
        android:layout_alignRight="@+id/view7"
        android:layout_alignTop="@+id/view12"
        android:background="#1596D2" />

    <View
        android:id="@+id/view18"
        android:layout_width="20dp"
        android:layout_height="10dp"
        android:layout_alignTop="@+id/view17"
        android:layout_toRightOf="@+id/view17"
        android:background="#1596D2" />

    <View
        android:id="@+id/view12"
        android:layout_width="20dp"
        android:layout_height="10dp"
        android:layout_alignBottom="@+id/view10"
        android:layout_alignRight="@+id/view1"
        android:layout_marginBottom="17dp"
        android:background="#1596D2" />

    <View
        android:id="@+id/view14"
        android:layout_width="20dp"
        android:layout_height="10dp"
        android:layout_alignTop="@+id/view13"
        android:layout_toRightOf="@+id/view13"
        android:background="#1596D2" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView9"
        android:layout_toLeftOf="@+id/textView6"
        android:text="MIN/KM"
        android:textAppearance="?android:attr/textAppearanceSmall" />

</RelativeLayout>